{
    "name": "floor12/yii2-imagefield",
    "description": "Yii2 package to add images (with order and croping) to any of yours models.",
    "type": "yii2-extension",
    "minimum-stability": "stable",
    "keywords": [
        "floor12",
        "yii",
        "yii2",
        "yii 2",
        "extension",
        "widget",
        "images",
        "croping"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "floor12",
            "email": "primelifecoder@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "yiisoft/yii2": "~2.0.0",
        "yiisoft/yii2-jui": "*",
        "bower-asset/cropper": "*"
    },
    "autoload": {
        "psr-4": {
            "floor12\\imagefield\\": "src"
        }
    },
    "extra": {
        "asset-installer-paths": {
            "bower-asset-library": "vendor/bower"
        }
    }
}
